<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PocketFridge" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/main_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="page_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/page_title_text_size</item>
        <item name="android:textColor">@color/black_high_emphasis</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="body_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:textColor">@color/black_high_emphasis</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="body_text.bold" parent="body_text">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/black_high_emphasis</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_text_big_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/button_text_size_big</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="error_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/error_text_size</item>
        <item name="android:textColor">@color/red_error_message</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="form_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/form_text_size</item>
        <item name="android:textColor">@color/black_high_emphasis</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="menu_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/menu_title_text_size</item>
        <item name="android:textColor">@color/black_low_emphasis</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="menu_content_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/menu_content_size</item>
        <item name="android:textColor">@color/black_low_emphasis</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="menu_text_18">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/menu_title_18_size</item>
        <item name="android:textColor">@color/black_high_emphasis</item>
        <item name="android:fontFamily">@font/noto_sans_black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="explain_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/explain_text_size</item>
        <item name="android:textColor">@color/black_low_emphasis</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="list_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/list_item_text_size</item>
        <item name="android:textColor">@color/black_low_emphasis</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="list_item_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/list_item_title_size</item>
        <item name="android:textColor">@color/black_high_emphasis</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="d_day_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/d_day_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Colors_Widget.MaterialComponents.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/chip_text_size</item>
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textColor">@color/color_chip_text_color</item>
        <item name="chipBackgroundColor">@color/color_chip_background_color</item>
        <item name="rippleColor">@color/gray</item>
        <item name="chipEndPadding">12dp</item>
        <item name="chipStartPadding">12dp</item>
    </style>

    <style name="TextInputLayout.Outlined.Custom" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@drawable/selector_box_stroke_color</item>
        <item name="boxStrokeWidth">1.5dp</item>
    </style>

    <!-- toolbar style -->
    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
    </style>

    <!-- date picker style -->
    <style name="date_picker_dialog_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/main_color</item>                   <!--header background-->
        <item name="android:windowBackground">@color/white</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/main_color</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/black</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/gray</item>    <!--days of the week-->
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_dialog</item>
    </style>

    <style name="tab_layout_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">@dimen/tab_layout_text_size</item>
        <item name="android:textColor">@color/black_high_emphasis</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>