<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="ingredient"
            type="com.andback.pocketfridge.domain.model.Ingredient" />
        <variable
            name="leftday"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_ingreI"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/guideline3_ingreI_vertical"
            app:layout_constraintStart_toStartOf="@id/guideline_ingreI_vertical"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/activity_margin_default" />

        <TextView
            style="@style/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/guideline2_ingreI_vertical"
            app:layout_constraintTop_toTopOf="@id/iv_ingreI"
            android:paddingVertical="4dp"
            android:paddingHorizontal="@dimen/activity_margin_narrow"
            android:text="@{leftday}"
            tools:text="D-3"
            android:background="@drawable/bg_ellipse_filled_4"
            android:textColor="@color/white"
            android:backgroundTint="@{(0 > ingredient.leftDay)? @color/main_color : @color/black}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_ingreI"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginVertical="@dimen/activity_margin_default"
            android:text="@{ingredient.name}"
            tools:text="상추" />

        <ImageView
            android:id="@+id/iv_ingreI_delete"
            android:layout_width="@dimen/default_icon_size"
            android:layout_height="@dimen/default_icon_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/activity_margin_narrow"
            android:layout_marginEnd="@dimen/activity_margin_narrow"
            android:visibility="gone"
            android:src="@drawable/ic_close"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_ingreI_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.1"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2_ingreI_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.5"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3_ingreI_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.9"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>