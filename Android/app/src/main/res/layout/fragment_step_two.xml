<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.andback.pocketfridge.present.views.user.UserViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".present.views.user.signup.StepOneFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/al_step_oneF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/tb_step_oneF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/sign_up"
                app:navigationIcon="@drawable/ic_close"/>

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_step_twoF_signup">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_step_twoF_title"
                    style="@style/page_title_text"
                    android:layout_marginStart="@dimen/activity_margin_wide"
                    android:layout_marginTop="120dp"
                    android:text="2단계 중 2단계" />

                <com.andback.pocketfridge.present.utils.CustomForm
                    android:id="@+id/custom_form_step_twoF_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    setTextWatcher="@{vm}"
                    app:menu_title="이름"
                    app:hint_msg="특수문자를 제외한 2~20자리"/>

                <com.andback.pocketfridge.present.utils.CustomForm
                    android:id="@+id/custom_form_step_twoF_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    setTextWatcher="@{vm}"
                    app:menu_title="닉네임"
                    app:hint_msg="특수문자 제외 2~10자리" />

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_step_twoF_signup"
            style="@style/button_text"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/activity_margin_default"
            android:background="@drawable/bg_ellipse_colored_32"
            android:text="회원가입"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:onClick="@{()->vm.onSignUpClick()}"
            android:clickable="false"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>