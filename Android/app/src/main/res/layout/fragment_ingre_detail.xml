<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".present.views.main.fridge.IngreDetailFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/abl_ingre_detailF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/tb_ingre_detailF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:navigationIcon="@drawable/ic_back" />

        </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/abl_ingre_detailF"
            android:layout_marginHorizontal="@dimen/activity_margin_24"
            android:layout_marginTop="@dimen/activity_margin_default"
            app:strokeWidth="1dp"
            app:strokeColor="@color/gray_non_clickable_button"
            app:cardElevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_margin_default">

                <LinearLayout
                    android:id="@+id/ll_ingre_detailF_storage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <TextView
                        style="@style/body_text"
                        android:text="@string/storage_fridge"
                        android:layout_marginEnd="@dimen/activity_margin_narrow"/>

                    <TextView
                        style="@style/body_text"
                        android:text="@string/storage_freeze"
                        android:layout_marginEnd="@dimen/activity_margin_narrow"/>

                    <TextView
                        style="@style/body_text"
                        android:text="@string/storage_room"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_ingre_detailF"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:layout_constraintTop_toBottomOf="@id/ll_ingre_detailF_storage"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:background="@drawable/bg_circle_white"
                    tools:backgroundTint="@color/gray"/>

                <TextView
                    android:id="@+id/tv_ingre_detailF_category"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/iv_ingre_detailF"
                    app:layout_constraintBottom_toBottomOf="@id/iv_ingre_detailF"
                    style="@style/body_text"
                    android:textStyle="bold"
                    tools:text="사과"/>

                <TextView
                    app:layout_constraintTop_toBottomOf="@id/tv_ingre_detailF_category"
                    app:layout_constraintEnd_toStartOf="@id/tv_ingre_detailF_left_day"
                    android:layout_marginEnd="@dimen/activity_margin_narrow"
                    style="@style/body_text"
                    android:textStyle="bold"
                    android:text="잔여기한:"/>

                <TextView
                    android:id="@+id/tv_ingre_detailF_left_day"
                    app:layout_constraintTop_toBottomOf="@id/tv_ingre_detailF_category"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/body_text"
                    android:textStyle="bold"
                    tools:text="D-3" />

                <TextView
                    style="@style/body_text"
                    android:id="@+id/tv_ingre_detailF_purchased_date"
                    app:layout_constraintTop_toBottomOf="@id/iv_ingre_detailF"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/activity_margin_wide"
                    tools:text="2022.05.01"/>

                <TextView
                    style="@style/body_text"
                    app:layout_constraintTop_toTopOf="@id/tv_ingre_detailF_purchased_date"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/purchased_date"/>

                <TextView
                    style="@style/body_text"
                    android:id="@+id/tv_ingre_detailF_expiry_date"
                    app:layout_constraintTop_toBottomOf="@id/tv_ingre_detailF_purchased_date"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/activity_margin_narrow"
                    tools:text="2022.05.02"/>

                <TextView
                    style="@style/body_text"
                    app:layout_constraintTop_toTopOf="@id/tv_ingre_detailF_expiry_date"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/expiry_date"/>

           </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ingre_detailF_delete"
            style="@style/button_text"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/activity_margin_24"
            android:layout_marginBottom="@dimen/activity_margin_default"
            android:background="@drawable/bg_ellipse_outline_main_color_32"
            android:text="@string/delete_button"
            app:layout_constraintBottom_toTopOf="@id/btn_ingre_detailF_edit" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ingre_detailF_edit"
            style="@style/button_text"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/activity_margin_24"
            android:background="@drawable/bg_ellipse_filled_main_color_32"
            android:text="@string/edit_button"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>